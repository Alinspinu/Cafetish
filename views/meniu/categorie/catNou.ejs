<% layout('layouts/boilerplate') %>
    <h1 class="text-center mb-2 fw400 color">New category</h1>
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-6 offset-md-3">
                <form action="/meniu/cats" method="POST" enctype="multipart/form-data" novalidate
                    class="validated-form">
                    <div class="input-group mb-3">
                        <input type="text" name="categorie[nume]" id="nume" class="form-control color bg-transparent"
                            placeholder="Name" aria-describedby="basic-addon1" required>
                    </div>
                    <div class="input-group">
                        <label for="catImg" class="custom-file-upload color bg-transparent mb-2">Image</label>
                        <input type="file" name="catImg" id="catImg" class="form-control form-control-color"
                            placeholder="Image" aria-describedby="basic-addon1">
                    </div>
                    <div class="input-group mb-3">
                        <textarea class="form-control color bg-transparent" name="categorie[descriere]"
                            placeholder="Description" required></textarea>
                    </div>
                    <button class="btn btn-primary mt-3">Add</button>
                </form>
            </div>

        </div>
    </div>