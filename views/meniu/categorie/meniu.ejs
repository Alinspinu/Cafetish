<% layout('layouts/boilerplate') %>
  <div class="container-fluid mt-3">
    <h1 class="text-center color my-4" id="h1">Descoperă cafeaua de specialitate prin produsele tale preferate...</h1>
<% cats.forEach(function(cat, i) {%>
    <%if(i%2===0) { %> 
 <section class="container-fluid px-0">
  <div class="row align-items-center mb-3">
    <div class="col-md-4 order-1">
     <a href="/meniu/cat/<%=cat._id%>">
        <img src="<%= cat.imagine.path.replace('/upload', '/upload/w_600')%> " class="img-fluid shadow-lg rounded mb-3" alt="..."
        id="img">
      </a>
      </div>
      <div class="col-md-8 order-2 mb-2">
        <div class="row justify-content-center">
          <div class="col-lg-10 shadow-sm">
            <span class="color fs-2"><%=cat.nume%></span> 
              <br>
              <span class="color" style="font-size:18px;"><%=cat.descriere%></span> <br>
                  <!-- <div class="d-grid gap-2"> -->
                    <a href="/meniu/cat/<%=cat._id%>"class="btn btn-sm my-3" name ="addButton">Descoperă...</a>
                  <!-- </div> -->
          </div>
        </div>
      </div>
  </div>
</section>
<% } else{ %> 
<section class="container-fluid px-0">
  <div class="row align-items-center mb-3">
    <div class="col-md-4 order-1 order-md-2">
      <a href="/meniu/cat/<%=cat._id%>">
          <img src="<%= cat.imagine.path.replace('/upload', '/upload/w_600')%> " class="img-fluid shadow-lg rounded mb-3" alt="..."
          id="img">
      </a>
    </div>
      <div class="col-md-8 order-2 order-md-1 mb-2">
        <div class="row justify-content-center">
          <div class="col-lg-10 shadow-sm">
            <span class="color fs-2"><%=cat.nume%></span> 
              <br>
              <span class="color" style="font-size:18px;"><%=cat.descriere%></span> <br>
                  <!-- <div class="d-grid gap-2"> -->
                    <a href="/meniu/cat/<%=cat._id%>" class="btn btn-sm my-3" name ="addButton">Descoperă...</a>
                  <!-- </div> -->
          </div>
        </div>
      </div>
  </div>
</section>
<% } %> 
  <% }) %> 