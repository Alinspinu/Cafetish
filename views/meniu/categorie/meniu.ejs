<% layout('layouts/boilerplate') %>
  <div class="container-fluid mt-3">
    <h1 class="text-center color fw500 my-4" id="h1">Descoperă cafeaua de specialitate prin produsele tale preferate...</h1>
<% cats.forEach(function(cat, i) {%>
    <%if(i%2===0) { %> 
 <section class="container-fluid px-0">
  <div class="row align-items-center mb-3">
    <div class="col-md-4 order-1">
     <a href="/meniu/cat/<%=cat._id%>">
        <img src="<%= cat.imagine.path.replace('/upload', '/upload/w_600')%> " class="img-fluid rounded mb-3" alt="..."
        id="img">
      </a>
      </div>
      <div class="col-md-8 order-2 mb-2">
        <div class="row justify-content-center">
          <div class="col-lg-10">
            <span class="color fw400 fs-2"><%=cat.nume%></span> 
              <br>
              <span class="color" style="font-size:18px;"><%=cat.descriere%></span> <br>
                
                    <a href="/meniu/cat/<%=cat._id%>"class="btn btn-sm fw400 my-3" name ="addButton">Descoperă...</a>
                    <% if(autUser && autUser.admin===flowerpower) {%> 
                    <a href="/meniu/cats/<%=cat._id%>/edit"class="color mx-2 my-3" name ="addButton">Modifică</a>
                    <% } %> 
                  
          </div>
        </div>
      </div>
  </div>
</section>
<% } else{ %> 
<section class="container-fluid px-0">
  <div class="row align-items-center mb-3">
    <div class="col-md-4 order-1 order-md-2">
      <a href="/meniu/cat/<%=cat._id%>">
          <img src="<%= cat.imagine.path.replace('/upload', '/upload/w_600')%> " class="img-fluid rounded mb-3" alt="..."
          id="img">
      </a>
    </div>
      <div class="col-md-8 order-2 order-md-1 mb-2">
        <div class="row justify-content-center">
          <div class="col-lg-10">
            <span class="color fw400 fs-2"><%=cat.nume%></span> 
              <br>
              <span class="color" style="font-size:18px;"><%=cat.descriere%></span> <br>
                    <a href="/meniu/cat/<%=cat._id%>" class="btn btn-sm fw400 my-3" name ="addButton">Descoperă...</a>
                    <% if(autUser && autUser.admin===flowerpower) {%> 
                      <a href="/meniu/cats/<%=cat._id%>/edit"class="color mx-2 my-3" name ="addButton">Modifică</a>
                      <% } %> 
                  
          </div>
        </div>
      </div>
  </div>
</section>
<% } %> 
  <% }) %> 