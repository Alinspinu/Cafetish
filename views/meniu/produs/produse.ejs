<% layout('layouts/boilerplate') %>
<h1 class="text-center mb-5"><%=cat.nume%></h1>
        <% cat.produs.forEach(function(produs, i) {%>
          <%if(i%2===0) { %> 
       <section class="container-fluid px-0">
        <div class="row align-items-center mb-3">
            <div class="col-md-4 order-1">
              <a href="/meniu/cafea">
              <img src="<%= produs.imagine.path.replace('/upload', '/upload/w_650')%> " class="img-fluid shadow-lg rounded mb-3" alt="..."
              id="img">
            </a>
            </div>
            <div class="col-md-8 order-2 mb-2">
              <div class="row justify-content-center">
                <div class="col-lg-10 shadow-sm">
                  <span class="color fs-2"><%=produs.nume%></span> 
                    <br>
                  <span class="color fs-4"><%=produs.pret%> Lei / <%=produs.gramaj%> </span> <br>
                    <span class="color" style="font-size:18px;"><%=produs.descriere%></span> <br>
                    <%if(cat.nume === "Lumea lui Espresso" || cat.nume === "Prin cafeaua Lactee" || cat.nume === "Cafeaua la filtru") {%> 
                      <div class="row">
                        <div class="col-lg-6">
                          <form action="/order/add-to-cart/<%=produs._id%>" method="POST">
                            <label for="cafea" class="color">Alege Cafeaua</label>
                            <select name="cafea" id="cafea" class="color form-select form-select-sm mb-3 bg-transparent" aria-label=".form-select-sm example">
                              <option value="Brazilia0">Brazilia Pedra Grande</option>
                              <option value="Beshasha2">Etiopia Beshasha + 2 Lei</option>
                              <option value="Danisa  3">Etiopia Danisa + 3 Lei</option>
                              <option value="Tarrazu 4">Costa Rica Tarrazu + 4 Lei</option>
                            </select>
                              <button class="btn btn-sm mb-3 me-3" name ="addButton" >Adaugă</button>   
                              <a href="/meniu/cafea" id="detaliiCafea">Despre cafea!</a>                   
                          </form>
                        </div>
                      </div>
                   

                    <% } else {%>
                       <form action="/order/add-to-cart/<%=produs._id%>" method="POST">
                          <!-- <div class="d-grid gap-2"> -->
                             <button class="btn btn-sm my-3" name ="addButton" >Adaugă</button>
                          <!-- </div> -->
                        </form>
                    <% } %> 
                    <% if(autUser && autUser.admin===flowerpower) {%> 
                      <a class='color'href="/meniu/cats/produs/<%=produs.id%>/edit">Modifică</a>
                      <% } %> 
                </div>
              </div>
            </div>
        </div>
      </section>
      <% } else{ %> 
      <section class="container-fluid px-0">
        <div class="row align-items-center mb-3">
            <div class="col-md-4 order-1 order-md-2">
              <a href="/meniu/cafea">
              <img src="<%= produs.imagine.path.replace('/upload', '/upload/w_650')%> " class="img-fluid shadow-lg rounded mb-3" alt="..."
              id="img">
              </a>
            </div>
            <div class="col-md-8 order-2 order-md-1 mb-2">
              <div class="row justify-content-center">
                <div class="col-lg-10 shadow-sm">
                  <span class="color fs-2"><%=produs.nume%></span> 
                    <br>
                  <span class="color fs-4"><%=produs.pret%> Lei / <%=produs.gramaj%> </span> <br>
                    <span class="color" style="font-size:18px;"><%=produs.descriere%></span> <br>
                    <%if(cat.nume === "Lumea lui Espresso" || cat.nume === "Prin cafeaua Lactee" || cat.nume === "Cafeaua la filtru") {%> 
                      <div class="row">
                        <div class="col-lg-6">
                          <form action="/order/add-to-cart/<%=produs._id%>" method="POST">
                            <label for="cafea" class="color">Alege Cafeaua</label>
                            <select name="cafea" id="cafea" class="color form-select form-select-sm mb-3 bg-transparent" aria-label=".form-select-sm example">
                              <option value="Brazilia0">Brazilia Pedra Grande</option>
                              <option value="Beshasha2">Etiopia Beshasha + 2 Lei</option>
                              <option value="Danisa  3">Etiopia Danisa + 3 Lei</option>
                              <option value="Tarrazu 4">Costa Rica Tarrazu + 4 Lei</option>
                            </select>
                              <button class="btn btn-sm mb-3 me-3" name ="addButton" >Adaugă</button>
                              <a href="/meniu/cafea" id="detaliiCafea">Despre cafea!</a>
                          </form>
    
                        </div>
                      </div>
                      
                    <% } else {%>
                       <form action="/order/add-to-cart/<%=produs._id%>" method="POST">
                          <!-- <div class="d-grid gap-2"> -->
                             <button class="btn btn-sm my-3" name ="addButton" >Adaugă</button>
                          <!-- </div> -->
                        </form>
                    <% } %> 
                    <% if(autUser && autUser.admin===flowerpower) {%> 
                    <a class='color'href="/meniu/cats/produs/<%=produs.id%>/edit">Modifică</a>
                    <% } %> 
                </div>
               
              </div>
            </div>
        </div>
      </section>
      <% } %> 
        <% }) %> 
      