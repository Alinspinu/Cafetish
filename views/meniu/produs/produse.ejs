<% layout('layouts/boilerplate') %>
        <% cat.produs.forEach(function(produs, i) {%>
          <%if(i%2===0) { %> 
       <section class="container-fluid px-0">
        <div class="row align-items-center mb-3">
            <div class="col-md-4 order-1">
              <img src="<%= produs.imagine.path.replace('/upload', '/upload/w_650')%> " class="img-fluid shadow-lg rounded mb-3" alt="..."
              id="img">
            </div>
            <div class="col-md-8 order-2 mb-2">
              <div class="row justify-content-center">
                <div class="col-10">
                  <span class="color1 fs-2"><%=produs.nume%></span> 
                    <br>
                  <span class="color1 fs-4"><%=produs.pret%> Lei / <%=produs.gramaj%> </span> <br>
                    <span class="color" style="font-size:22px;"><%=produs.descriere%></span> <br>
                      <%if(cat.nume === "Espresso World" || cat.nume === "Black and White" || cat.nume === "Filter Coffee") {%> 
                    <a href="/meniu/cafea" id="detaliiCafea">Despre cafea!</a>
                      <% } %>
                    <%if(cat.nume === "Espresso World" || cat.nume === "Black and White" || cat.nume === "Filter Coffee") {%> 
                      <div class="row">
                        <div class="col-6">
                          <form action="/order/add-to-cart/<%=produs._id%>" method="POST">
                            <label for="cafea" class="color">Alege Cafeaua</label>
                            <select name="cafea" id="cafea" class="color form-select form-select-sm mb-3 bg-transparent" aria-label=".form-select-sm example">
                              <option value="Brazilia0">Brazilia Pedra Grande</option>
                              <option value="Beshasha2">Etiopia Beshasha + 2 Lei</option>
                              <option value="Danisa  3">Etiopia Danisa + 3 Lei</option>
                              <option value="Tarrazu 4">Costa Rica Tarrazu + 4 Lei</option>
                            </select>
                              <button class="btn btn-sm" name ="addButton" >Adaugă</button>                      
                          </form>
                        </div>
                      </div>
                   

                    <% } else {%>
                       <form action="/order/add-to-cart/<%=produs._id%>" method="POST">
                          <!-- <div class="d-grid gap-2"> -->
                             <button class="btn btn-sm mt-3" name ="addButton" >Adaugă</button>
                          <!-- </div> -->
                        </form>
                    <% } %> 
                </div>
              </div>
            </div>
        </div>
      </section>
      <% } else{ %> 
      <section class="container-fluid px-0">
        <div class="row align-items-center mb-3">
            <div class="col-md-4 order-1 order-md-2">
              <img src="<%= produs.imagine.path.replace('/upload', '/upload/w_650')%> " class="img-fluid shadow-lg rounded mb-3" alt="..."
              id="img">
            </div>
            <div class="col-md-8 order-2 order-md-1 mb-2">
              <div class="row justify-content-center">
                <div class="col-10">
                  <span class="color1 fs-2"><%=produs.nume%></span> 
                    <br>
                  <span class="color1 fs-4"><%=produs.pret%> Lei / <%=produs.gramaj%> </span> <br>
                    <span class="color" style="font-size:22px;"><%=produs.descriere%></span> <br>
                      <%if(cat.nume === "Espresso World" || cat.nume === "Black and White" || cat.nume === "Filter Coffee") {%> 
                    <a href="/meniu/cafea" id="detaliiCafea">Despre cafea!</a>
                      <% } %>
                    <%if(cat.nume === "Espresso World" || cat.nume === "Black and White" || cat.nume === "Filter Coffee") {%> 
                      <div class="row">
                        <div class="col-4">
                          <form action="/order/add-to-cart/<%=produs._id%>" method="POST">
                            <label for="cafea" class="color">Alege Cafeaua</label>
                            <select name="cafea" id="cafea" class="color form-select form-select-sm mb-3 bg-transparent" aria-label=".form-select-sm example">
                              <option value="Brazilia0">Brazilia Pedra Grande</option>
                              <option value="Beshasha2">Etiopia Beshasha + 2 Lei</option>
                              <option value="Danisa  3">Etiopia Danisa + 3 Lei</option>
                              <option value="Tarrazu 4">Costa Rica Tarrazu + 4 Lei</option>
                            </select>
                              <button class="btn btn-sm" name ="addButton" >Adaugă</button>
                          </form>
    
                        </div>
                      </div>
                      
                    <% } else {%>
                       <form action="/order/add-to-cart/<%=produs._id%>" method="POST">
                          <!-- <div class="d-grid gap-2"> -->
                             <button class="btn btn-sm mt-3" name ="addButton" >Adaugă</button>
                          <!-- </div> -->
                        </form>
                    <% } %> 
                </div>
              </div>
            </div>
        </div>
      </section>
      <% } %> 
        <% }) %> 
      