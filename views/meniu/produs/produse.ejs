<% layout('layouts/boilerplate') %>
  <div class="container-fluid">
    <div class="row row-cols-1 row-cols-md-2 g-4">
      <% cat.produs.forEach(function(produs, i) {%>
        <div class="col-lg-6 col-xl-4 col-xxl-3 gx-3 mt-2">
          <div class="card mt-3 shadow-lg bg-transparent text-white h-100">
            <a role="button" href="/meniu/cats/produs/<%=produs._id%>">
              <% if(!produs.imagine.path) {%>
                <img
                  src="https://res.cloudinary.com/dhetxk68c/image/upload/w_150/v1668202831/ProduseI/downloadnoimgs_ghglfb.png"
                  class="card-img-top" alt="">
                <% } else {%>
                  <img src="<%= produs.imagine.path.replace('/upload', '/upload/w_500')%> " class="img-fluid" alt="..."
                    id="img">
                  <% } %>
            </a>
            <div class="card-body" id="card-body">
              <h3 class="card-title">
                <%= produs.nume %>
              </h3>
              <p class="card-text">
                <%= produs.descriere%>
              </p>
              <form action="/order/add-to-cart/<%=produs._id%>" method="get">
                <button class="btn btn-sm bg-transparent" name ="addButton" >AdaugÄƒ</button>
              </form>

            </div>
          </div>
        </div>
        <% }) %>
    </div>
  </div>