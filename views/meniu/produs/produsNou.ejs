<% layout('layouts/boilerplate') %>
    <h1 class="text-center mb-2 fw400 color">New Product</h1>
    <div class="container-fluid mt-5">
        <div class="row">
            <div class="col-md-6 offset-md-3">

                <form action="/meniu/cats/produs/nou" method="POST" enctype="multipart/form-data" novalidate
                    class="validated-form">
                    <div class="input-group mb-3">
                        <input type="text" name="produs[nume]" id="nume" class="form-control color bg-transparent"
                            placeholder="Name" aria-describedby="basic-addon1" required>
                    </div>
                    <div class="input-group mb-3">
                        <input type="text" name="produs[gramaj]" id="gramaj" class="form-control color bg-transparent"
                            placeholder="Unit" aria-describedby="basic-addon1" required>
                    </div>
                    <div class="input-group mb-3">
                        <input type="text" name="produs[pret]" id="pret" class="form-control color bg-transparent"
                            placeholder="Price" aria-describedby="basic-addon1" required>
                    </div>

                    <!-- <div class="input-group mb-3">
                        <span class="input-group-text color bg-transparent" for="video">Youtube URL</span>
                        <input type="text" name="produs[video]" id="video" class="form-control color bg-transparent" 
                            aria-describedby="basic-addon1">
                    </div> -->
                    <div class="input-group">
                        <!-- <span class="input-group-text text-white bg-dark" for="imagine">Imagine</span> -->
                        <label for="imagine" class="custom-file-upload color bg-transparent mb-2">Image</label>
                        <input type="file" name="imagine" id="imagine" class="form-control form-control-color"
                            placeholder="Image" aria-describedby="basic-addon1">
                    </div>
                    <div class="input-grup mb-3">
                        <label class="color bg-transparent mb-2" for="cat"> Select category</label>
                        <select class="form-select color bg-transparent" name="produs[categorie]"
                            aria-label="Default select example" id="cat">
                            <% for(let i=0; i<cats.length; i++) {%>
                                <option value="<%=cats[i]._id%>">
                                    <%=cats[i].nume%>
                                </option>
                                <% } %>
                        </select>
                    </div>

                    <div class="input-group mb-3">
                        <textarea class="form-control color bg-transparent" name="produs[descriere]"
                            placeholder="Description"></textarea>
                    </div>

                    <button class="btn btn-dark btn-lg mt-3">Add</button>
                </form>
            </div>
        </div>
    </div>