<%layout('layouts/boilerplate') %>
  <h1 class="text-center fw400">Discover coffee origin</h1>
  <% cafele.forEach((cafea, i)=> {%>
    <% if(i%2===0){ %>
      <section class="container-fluid px-0">
        <div class="row align-items-center my-5">
          <div class="col-md-4 order-1">
            <div id="carouselExampleControls<%=i%>" class="carousel slide" data-bs-ride="carousel">
              <div class="carousel-inner">
                <% cafea.imagini.forEach((img, i)=> {%>
                  <div class="carousel-item <%= i=== 0 ? 'active' : '' %>">
                    <img src="<%=img.path.replace('/upload','/upload/w_500')%>" class="img-fluid" alt="...">
                  </div>
                  <% }) %>
              </div>
              <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls<%=i%>"
                data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
              </button>
              <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls<%=i%>"
                data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
              </button>
            </div>
          </div>
          <div class="col-md-8 order-2">
            <div class="row justify-content-center">
              <div class="col-lg-10">
                <h3 class="color fw500 my-3">
                  <%=cafea.nume%>
                </h3>
                <p class="color" style="font-size:19px;">
                  <%=cafea.descriere%>
                </p>
                <a href="/meniu/cat/<%=catId%>" class="btn mb-3 btn-sm">Back to menu</a> <br>
                <% if(autUser && autUser.admin===flowerpower) {%>
                  <form action="/meniu/cafea/<%=cafea.id%>?_method=DELETE" method="POST"><button
                      class="btn btn-sm my-4 me-2">Delete</button>
                    <a href="/meniu/cafea/<%=cafea.id%>/edit" class="btn btn-sm">Edit</a>
                  </form>
                  <% } %>
              </div>
            </div>
          </div>
        </div>
        </div>
        </div>
      </section>
      <% } else {%>
        <section class="container-fluid px-0">
          <div class="row align-items-center my-5">
            <div class="col-md-4 order-1 order-md-2">
              <div id="carouselExampleControls<%=i%>" class="carousel slide" data-bs-ride="carousel">
                <div class="carousel-inner">
                  <% cafea.imagini.forEach((img, i)=> {%>
                    <div class="carousel-item <%= i=== 0 ? 'active' : '' %>">
                      <img src="<%=img.path.replace('/upload', '/upload/w_400')%>" class=" img-fluid" alt="...">
                    </div>
                    <% }) %>
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls<%=i%>"
                  data-bs-slide="prev">
                  <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                  <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls<%=i%>"
                  data-bs-slide="next">
                  <span class="carousel-control-next-icon" aria-hidden="true"></span>
                  <span class="visually-hidden">Next</span>
                </button>
              </div>
            </div>
            <div class="col-md-8 order-2 order-md-1">
              <div class="row justify-content-center">
                <div class="col-lg-10">
                  <h3 class="color fw500 my-3">
                    <%=cafea.nume%>
                  </h3>
                  <p class="color" style="font-size:19px;">
                    <%=cafea.descriere%>
                  </p>
                  <a href="/meniu/cat/<%=catId%>" class="btn mb-3 btn-sm">Back to menu</a> <br>
                  <% if(autUser && autUser.admin===flowerpower) {%>
                    <form action="/meniu/cafea/<%=cafea.id%>?_method=DELETE" method="POST"><button
                        class="btn btn-sm my-4 me-2">Delete</button>
                      <a href="/meniu/cafea/<%=cafea.id%>/edit" class="btn btn-sm">Edit</a>
                    </form>
                    <% } %>
                </div>
              </div>
            </div>
          </div>
          </div>
          </div>
        </section>
        <% } %>
          <% }) %>