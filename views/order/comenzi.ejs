<% layout('layouts/boilerplate') %>
<div class="container-flex mt-5">
    <div class="row">
    <% for (let order of orders) {%> 
    <div class="col-lg-3 text-white mt-5">
    <ul class="list-group">
     <li class="list-group-item"><span>Nume: <%=order.nume%> </span> </li>
     <li class="list-group-item text-success"><span>Telefon: <%=order.telefon%></span></li>
    <li class="list-group-item text-danger"><span>Să fie gata în <%=order.timp%>  minute</span> </li>
        <% for( let item of order.items) {%> 
        <li class="list-group-item text-info">
            <span><%=item.qty%> X </span>
            <span><%=item.nume%></span>
            <span> = <%=item.pret%> Lei</span>
        </li>
       <% } %> 
       <li class="list-group-item"><span>TOTAL Comandă <%=order.cart.totalPrice%> Lei</span></li>
       <li class="list-group-item"><span>Comentarii: <%=order.comentarii%> </span></li>
       <li class="list-group-item text-danger"><span>Plătit <%=order.payd%> </span></li>
    </ul>
    
    <form class="d-inline"action="/order/<%=order._id%>?_method=DELETE" method="POST">
        <button class="btn btn-secondary mt-2">Delete</button>
    </form>
</div>
    <% } %> 

    </div>
</div>