<% layout('layouts/boilerplate') %>
<!-- <meta http-equiv="refresh" content="10"> -->
<div class="container-flex mt-5">
    <div class="row">
    <% for (let order of orders) {%> 
        <% if(order.livrat === 'Nu') {%> 
    <div class="col-lg-3 text-white mt-5">
    <ul class="list-group">
     <li class="list-group-item"><span class="fw500">Nume: <%=order.nume%> </span> </li>
     <li class="list-group-item text-success"><span class="fw500">Telefon: <%=order.telefon%></span></li>
    <li class="list-group-item text-danger"><span class="fw500">Să fie gata în <%=order.timp%>  minute</span> </li>
    <li class="list-group-item color"><span class="fw500">Comanda a fost creată la ora: <%=order.time%></span> </li>

        <% for( let item of order.items) {%> 
        <li class="list-group-item text-info">
            <span class="fw500"><%=item.qty%> X </span>
            <span class="fw500"><%=item.nume%></span>
            <span class="fw500"> = <%=item.pret%> Lei</span>
        </li>
       <% } %> 
       <li class="list-group-item"><span class="fw500">TOTAL Comandă <%=order.cart.totalPrice%> Lei</span></li>
       <li class="list-group-item"><span class="fw500">Comentarii: <%=order.comentarii%> </span></li>
       <li class="list-group-item text-danger"><span class="fw500">Plătit <%=order.payd%> </span></li>
    </ul>
    
    <form class="d-inline"action="/order/<%=order._id%>?_method=DELETE" method="POST">
        <button class="btn btn-secondary mt-2">Delete</button>
        
    </form>
    <form action="/order/<%=order.id%>" class="d-inline" method="POST">
        <button class="btn btn-secondary mt-2">Livrat</button>
    </form>
</div>
<% } %> 
    <% } %> 

    </div>
</div>