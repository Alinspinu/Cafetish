<% layout('layouts/boilerplate') %>
  <link rel="stylesheet" href="/stylesheets/checkout.css" />
  <script src="https://js.stripe.com/v3/"></script>
  <script src="/javascripts/checkout.js" defer></script>

  <div class="container-fluid  mt-5">
    <div class="row pe-0">
      <div class="col-lg-6 offset-lg-3">
        <h1 class="color">Pay</h1> <br>
        <p class="lead color">Picked up the order from Cafetish!</p>
        <span class="color" style="font-size:26px;">Total: <%=total%> Lei</span>
        <!-- <% if(total>50){%>  -->
        <!-- Display a payment form -->
        <form id="payment-form" class="px-0 py-0" action="/order/create-payment-intent" method="POST">
          <div id="payment-element">
            <!--Stripe.js injects the Payment Element-->
          </div>
          <button class="btn btn-sm" id="submit">
            <div class="spinner hidden" id="spinner"></div>
            <span class="btn bg-transparent" style="border:none;" id="button-text">Pay with card</span>
          </button>
          <!-- <% } else { %>  -->
          <a href="/order/successs" type="button" class="btn btn-sm mb-2" id="pay">Pay in coffeeshop</a>
          <div id="payment-message" class="hidden"></div>
          <!-- <% } %>  -->
        </form>
      </div>
    </div>
  </div>