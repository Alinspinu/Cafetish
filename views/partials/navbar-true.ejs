</style>
<nav class="navbar">
    <div class="logo">
        <img src="https://res.cloudinary.com/dhetxk68c/image/upload/v1693319361/black-coffee_okh4fc.png" alt="logo">
       <span>Comenzi</span> 
    </div>
  
        <div class="link-3">
            <i class="bi bi-megaphone play"></i>
            <i class="bi bi-megaphone-fill hide"></i>
        </div>
    <div class="nav-links">
        <div class="link-1">
            <a href="/api/order-page">Comenzi Live</a>
        </div>
        <div class="link-2">
            <a href="/api/finish-order-page">Comenzi Terminate</a>
        </div>
    </div>
</nav>

<script>
    let baseUrlLocal = 'http://localhost:8090/'
    const baseUrlHeroku = 'https://www.cafetish.com/'

    const currentUrl = window.location.href;
    if (currentUrl.startsWith(baseUrlLocal)) {
        baseUrlLocal = baseUrlLocal;
    } else {
        baseUrlLocal = baseUrlHeroku;
    }
    const dingSound = new Audio(`${baseUrlLocal}sounds/ding.mp3`);
    const playButton = document.querySelector('.play')
    const comenziLive = document.querySelector('.link-1')
    const comenziTerminate = document.querySelector('.link-2')
    const currentTab = window.location.href;
    const indexTab = currentTab.lastIndexOf('/');
    const tab = currentTab.slice(indexTab +1);
    if(tab === 'finish-order-page'){
       comenziTerminate.classList.add('active')     
       comenziLive.classList.remove('active')
    } else {
        comenziTerminate.classList.remove('active')     
        comenziLive.classList.add('active')
    }
    comenziLive.addEventListener('click', () =>{
        comenziLive.classList.add('active')
        comenziTerminate.classList.remove('active') 
    })
    comenziTerminate.addEventListener('click', () => {
        comenziTerminate.classList.add('active')     
       comenziLive.classList.remove('active')
    })

    playButton.addEventListener('click', function(){
        dingSound.play()
    })


</script>

