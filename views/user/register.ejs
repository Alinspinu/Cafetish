<% layout('layouts/boilerplate') %>
<div class="container justify-content-center align-items-center mt-2">
    <div class="row">
        <div class="col-lg-6 offset-lg-3">
                    <h1 class="text-center mb-5 color">Register</h1>
                    <form action="/user/register" method = "POST" class = "validated-form" novalidate>
                        <label class="my-2 fs-5"for="username">Username</label> 
                        <div class="input-group-lg mb-4">
                            <input class="form-control bg-transparent color"type="text"  name="username" id="username" autofocus required>
                            <div class="valid-feedback color">Looks Good!!</div>
                        </div>
                        <label class="my-2 fs-5"for="email">Email</label> 
                        <div class="input-group-lg mb-3">
                            <input class="form-control bg-transparent color"type="email" name="email" id="email" required>
                            <div class="valid-feedback">Looks Good!!</div>
                        </div>
                        <label class="my-2 fs-5"for="password">Password</label> 
                        <div class="input-group-lg mb-3">
                            <input class="form-control bg-transparent color"type="password"  name="password" id="password" required>
                            <div class="valid-feedback">Looks Good!!</div>
                        </div>           
                            <button class="btn mt-4">Register</button>
                        </form>
                        <div style="height:100px;"></div>
              
        </div>
    </div>
</div>
