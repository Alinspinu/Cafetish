<% layout('layouts/boilerplate') %>
<div class="container justify-content-center align-items-center mt-5">
    <div class="row">
        <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4">
            <div class="card shadow-lg bg-transparent">
               <div class="card-body">
                <img src="https://res.cloudinary.com/dhetxk68c/image/upload/v1670970378/ProduseI/logInV1_mhdpcj.png" 
                    alt="" class="card-img-top">
                    <h5 class="card-title color">Register</h5>
                    <form action="/user/register" method = "POST" class = "validated-form" novalidate>
                        <div class="mb-3">
                           
                            <input class="form-control bg-transparent color"type="text" placeholder="Username" name="username" id="username" autofocus required>
                            <div class="valid-feedback color">Looks Good!!</div>
                        </div>
                        <div class="mb-3">
                            <input class="form-control bg-transparent color"type="email" placeholder="Email" name="email" id="email" required>
                            <div class="valid-feedback">Looks Good!!</div>
                        </div>
                        <div class="mb-3">    
                            <input class="form-control bg-transparent color"type="text" placeholder="Telefon" name="telefon" id="telefon" required>
                            <div class="valid-feedback">Looks Good!!</div>
                        </div>
                        <div class="mb-3">
                            <input class="form-control bg-transparent color"type="password" placeholder="Password" name="password" id="password" required>
                            <div class="valid-feedback">Looks Good!!</div>
                        </div>           
                        <div class="d-grid gap-2">
                            <button class="btn btn-sm">Register</button>
                        </div>
                        
                    </form>
               </div>
            </div>
        </div>
    </div>
</div>
