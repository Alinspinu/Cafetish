<% layout('layouts/boilerplate') %><div class="container justify-content-center align-items-center mt-5">
    <div class="row">
        <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4">
            <div class="card shadow-lg bg-transparent">
               <div class="card-body">
                <img src="https://res.cloudinary.com/dhetxk68c/image/upload/v1670970378/ProduseI/logInV1_mhdpcj.png" 
                    alt="" class="card-img-top">
                <h5 class="card-title color">Login</h5>
                <form action="/user/login" method = "POST" class = "validated-form" novalidate>
                    <div class="mb-3">
                    
                        <input class="form-control bg-transparent color" type="text" name="username" id="username" placeholder="Username" autofocus required>
                        <div class="valid-feedback">Looks Good!!</div>
                    </div>
                    <div class="mb-3">
                        <input class="form-control bg-transparent color" type="password" name="password" id="password" placeholder="Password"required>
                        <div class="valid-feedback">Looks Good!!</div>
                    </div>
                    <div class="d-grid gap-2">
                    <button class="btn btn-sm">Log In</button>
                    </div>
                    <div class="d-grid gap-2">
                    <a href="/user/register" type="button" class="btn btn-sm mt-2">Register</a>
                </div>
                </form>
               </div>
            </div>
        </div>
    </div>
</div>
